<body>
   <form action="comp_stat" method="post">
      <div id="myform">
         <h4>Comparative Statements</h4>
         <label for="department">Department:</label>
         <div>
            <input type="text" id="department" name="department">
         </div>
         <br>
         <label for="for">Comparative Statment for:</label>

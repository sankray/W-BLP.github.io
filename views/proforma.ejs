<body>

    <nav>
        <a href="/proforma">Proforma</a>||
        <a href="/get-all-pending-proforma">Pending Proforma</a>||
        <a href="/accept-proforma-request">Take action</a>
    </nav>

    <br>
    <div class="container">
        <h2 class="main_heading">Proforma</h2>
        <hr>
        <br>
        <div class="row">
            <div class="col-md-3">


                <form action="/proforma" method="POST">

                    <label for="name">Submitted by:</label>
                    <div class="form">
                        <input type="name" class="name" id="name" name="name" placeholder="">
                    </div>
                    <br>                    

                    <label for="equipment">Particular of Equipment:</label>
                    <div class="form">
                        <input type="text" class="equipment" id="equipment" name="equipment" placeholder="">
                    </div>
                    <br>
                    <label for="specification">Specification:</label>
                    <div class="form">
                        <textarea name="specification" id="specification" cols="30" rows="10"></textarea>
                    </div>
                    <br>

                    <h3>Vendors</h3>
                    <div class="form">
                        <input type="text" class="vendor_name" placeholder="enter name" name="vendor_name">
                        <input type="text" class="vendor_address" placeholder="enter address" name="vendor_address">
                    </div>
                    <br>
                    <div class="form">
                        <input type="text" class="vendor_name1" placeholder="enter name" name="vendor_name1">
                        <input type="text" class="vendor_address1" placeholder="enter address" name="vendor_address1">
                    </div>
                    <br>
                    <div class="form">
                        <input type="text" class="vendor_name2" placeholder="enter name" name="vendor_name2">
                        <input type="text" class="vendor_address2" placeholder="enter address" name="vendor_address2">
                    </div>
                    <div class="inp-group">
                        <div class="vendor-input">
                            <br>
                        </div>
                    </div>
                    <button id="add" class="add" value="Add" type="button" onclick="addInput()">Add Vendors</button>


                    <br>
                    <br>
                    <label for="cost">Approximate Cost:</label>
                    <div class="form">
                        <input type="text" class="cost" id="cost" name="cost">
                    </div>
                    <br>
                    <label for="justification">Justification for Purchase:</label>
                    <div class="form">
                        <input type="text" class="justification" id="justification" name="justification">
                    </div>
                    <br>

                    <h3>Departmental Committee Members:</h3>
                    <div class="form">
                        <input type="text" class="member_name" placeholder="enter name" name="member_name">
                    </div>
                    <br>
                    <div class="form">
                        <input type="text" class="member_name1" placeholder="enter name" name="member_name1">
                    </div>
                    <br>
                    <div class="form">
                        <input type="text" class="member_name2" placeholder="enter name" name="member_name2">
                    </div>
                    
                    <div class="inp-groups">
                        <div class="member-input">
                            <br>
                        </div>
                    </div>
                    <button id="add" class="add" value="Add" type="button" onclick="addInputs()">Add
                        Members</button>
                    <br>
                    <br>
                    <label for="meeting">Meeting was held on:</label>
                    <div class="form">
                        <input type="datetime-local" class="meeting" id="meeting" name="meeting">
                    </div>

                    <label for="submitted_to">Submitted for Approval:</label>
                    <div class="form">
                        <select name="submitted_to" id="submitted_to" class="submitted_to">
                        <option value="hod@q">H.O.D</option>
                        <option value="registrar@q">Registrar</option>
                    </select>
                    </div>
                    <br>
                    <label for="registrar">Finance Provision:</label>
                    <div class="form">
                        <input type="text" name="registrar" id="registrar" class="registrar">
                    </div>
                    <br>
                    <label for="principal">Submitted for Approval:</label>
                    <div class="form">
                        <input type="text" name="principal" id="principal" class="principal">
                    </div>
                    <label for="email">Notify on:</label>
                    <div class="form">
                        <input placeholder="Email" id="email" type="email" name="email" class="form-control"
                            aria-describedby="emailHelp">
                    </div>
                    <br>
                    <input type="submit" value="Submit">
            </div>
            <div>


                </form>
                <script>
                    const input = document.querySelector(".inp-group");

                    function removeInput() {
                        this.parentElement.remove();
                    }

                    function addInput() {
                        const input = document.querySelector(".inp-group");
                        const container = document.createElement("div");
                        container.className = "vendor-input";

                        const nameContainer = document.createElement("div");
                        nameContainer.className = "form";

                        const name = document.createElement("input");
                        name.type = "text";
                        name.className = "vendor-name";
                        name.placeholder = "enter name";
                        name.name = "vendor-name";

                        const addressContainer = document.createElement("div");
                        addressContainer.className = "form";

                        const address = document.createElement("input");
                        address.type = "text";
                        address.className = "vendor-address";
                        address.placeholder = "enter address";
                        address.name = "vendor-address";
                        address.style.width = "100%";

                        const btn = document.createElement("a");
                        btn.className = "delete";
                        btn.innerHTML = "&times;";
                        btn.addEventListener("click", removeInput);

                        nameContainer.appendChild(name);
                        addressContainer.appendChild(address);
                        container.appendChild(nameContainer);
                        container.appendChild(addressContainer);
                        container.appendChild(btn);
                        input.appendChild(container);
                    }
                </script>
                <script>
                    function addInputs() {
                        const inputGroup = document.querySelector(".inp-groups");
                        const memberInput = document.createElement("div");
                        memberInput.className = "member-input";

                        const nameContainer = document.createElement("div");
                        nameContainer.className = "form";

                        const name = document.createElement("input");
                        name.type = "text";
                        name.className = "member-name";
                        name.placeholder = "enter name";
                        name.name = "member-name";

                        const btn = document.createElement("a");
                        btn.className = "delete";
                        btn.innerHTML = "&times;";
                        btn.addEventListener("click", function () {
                            memberInput.remove();
                        });

                        nameContainer.appendChild(name);
                        memberInput.appendChild(nameContainer);
                        memberInput.appendChild(btn);
                        inputGroup.appendChild(memberInput);
                    }

                </script>

</body>

